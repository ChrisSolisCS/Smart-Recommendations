<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.towatch.ToWatchFragment">


    <!-- ScrollView containing EditText and Button -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Text Box to Enter Movie/Show Name -->
            <!-- Button to Add Movie/Show -->
            <EditText
                android:id="@+id/editTextMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="autofill_hint_text"
                android:hint="@string/enter_movie_or_show_hint"
                android:inputType="text"
                android:padding="16dp"
                android:layout_marginTop="50dp" />


            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/add_button_text" />
        </LinearLayout>
    </ScrollView>


    <!-- List to Display Entered Items -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="16dp" />


</RelativeLayout>
